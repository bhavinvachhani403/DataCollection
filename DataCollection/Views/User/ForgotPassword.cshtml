<style>
    .signup-form h2:before, .signup-form h2:after {        
        width: 17% !important;        
    }
</style>
<link href="~/Content/registration.css" rel="stylesheet" />
<div class="login-form signup-form">
    @using (Html.BeginForm("ForgotPassword", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h2 class="text-center">Forgot Password</h2>
        if (ViewBag.Status != null && ViewBag.Status == true)
        {
            if(ViewBag.Message != null && ViewBag.Message != "")
            {
                <div class="alert alert-success">
                    <strong>Success! </strong>@ViewBag.Message
                </div>
            }
        }
        else
        {
            if(ViewBag.Message != null && ViewBag.Message != "")
            {
                <div class="alert alert-danger">
                    <strong>Error! </strong>@ViewBag.Message
                </div>
            }
        }
        <div class="form-group">
            @Html.TextBox("EmailID", "", new { @type="email", @class = "form-control", @placeholder = "Email Address", @required = "required" })
            @Html.ValidationMessage("EmailID", "Email Address is Required", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>
    }
</div>

@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}